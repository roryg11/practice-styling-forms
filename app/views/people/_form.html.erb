<%= form_for(@person) do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% @person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :first_name, class: "col-sm-2 control-label" %>
    <div class="form-group col-sm-10">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, class: "col-sm-2 control-label" %>
    <div class="form-group col-sm-10">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date_of_birth, class: "col-sm-2 control-label" %>
    <div class="form-group col-sm-10">
      <%= f.date_field :date_of_birth%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :bio, class: "col-sm-2 control-label" %>
    <div class="form-group col-sm-10">
      <%= f.text_area :bio, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2">
    </div>
    <div class="form-group col-sm-10">
      <%= f.check_box :active, class: "pull-left"%>
      <%= f.label :active, class: "control-label"%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-10">
      <%= f.submit class: "btn btn-info"%>
      <%= link_to 'Cancel', people_path, class: "btn btn-default" %>
    </div>
  </div>

<% end %>
